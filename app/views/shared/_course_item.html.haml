.col-md-3.col-xs-4
  .thumbnail
    = image_tag course.image.url
    .caption
      %p
        %strong
          Name:
        = course.name
        %br/
        %strong
          Price:
        = course.price
    = button_tag 'Add to order', 
                  class: 'btn btn-primary btn-block to_order_btn',
                  data: { id: course.id, 
                          name: course.name, 
                          price: course.price,
                          type: course.course_type }  