$(document).ready(function() {
  var totalPrice = function(){
    var firstCoursePrice = parseInt($("#order_first_course_id").find(':selected').data("price"));
    var mainCoursePrice = parseInt($("#order_main_course_id").find(':selected').data("price"));
    var drinkPrice = parseInt($("#order_drink_id").find(':selected').data("price"));

    var totalPrice = (firstCoursePrice + mainCoursePrice + drinkPrice) || 0;
    
    $("#total_price").text(totalPrice);
    
    if (firstCoursePrice && mainCoursePrice && drinkPrice)
      $("#orderSubmit").attr("disabled", false);
    else
      $("#orderSubmit").attr("disabled", true);
  } 
  
  totalPrice();

  $(".form-control").change(function(){
    totalPrice();
  });

  $('#datepicker').datepicker({
    minDate: "-2w",
    maxDate: "0d",
    dateFormat: 'dd/mm/yy',
    todayHighlight: true,
    onSelect:function(){
      date = this.value;

      $("#daily_menu_date").text(date);

      $.ajax({
        url: "<%= Rails.application.routes.url_helpers.get_daily_menu_path %>",
        method: "GET",
        dataType: "html",
        data: {
          date: date
        },
        success: function(data){
          $("#daily_menu_items").html(data);
        }
      });
    }
  });
}); 